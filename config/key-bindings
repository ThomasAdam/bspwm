#
# bspwm hotkeys
#

Mod4-Alt-Escape	bspc quit
Mod4-w	bspc close
Mod4-t	bspc cycle_layout
Mod4-y	bspc cycle_layout
Mod4-r bspc rotate clockwise
Mod4-Shift-r	bspc rotate counter_clockwise
Mod4-u	bspc rotate full_cycle
Mod4-s	bspc toggle_floating
Mod4-f	bspc toggle_fullscreen
Mod4-x	bspc toggle_locked
Mod4-Return	bspc alternate
Mod4-Tab	bspc alternate_desktop
Mod4-h	bspc focus left
Mod4-l	bspc focus right
Mod4-k	bspc focus up
Mod4-j	bspc focus down
Mod4-Shift-h	bspc shift left
Mod4-Shift-l	bspc shift right
Mod4-Shift-k	bspc shift up
Mod4-Shift-j	bspc shift down
Mod4-o	bspc nearest older
Mod4-i	bspc nearest newer
Mod4-d	bspc cycle next --skip-floating
Mod4-Shift-d	bspc cycle prev --skip-floating
Mod4-a bspc	cycle next --skip-tiled
Mod4-Shift-a	bspc cycle prev --skip-tiled
Mod4-grave	bspc cycle next --skip-class-equal
Mod4-Shift-grave	bspc cycle prev --skip-class-equal
Mod4-e	bspc cycle next --skip-class-differ
Mod4-Shift-e	bspc cycle prev --skip-class-differ
Mod4-comma	bspc circulate backward
Mod4-period	bspc circulate forward
Mod4-c	bspc cycle next
Mod4-Shift-c	bspc cycle prev
Mod4-bracketright	bspc cycle_desktop next
Mod4-bracketleft	bspc cycle_desktop prev
Mod4-Control-bracketright	bspc cycle_desktop next --skip-free
Mod4-Control-bracketleft	bspc cycle_desktop prev --skip-free
Mod4-Control-h	bspc presel left
Mod4-Control-l	bspc presel right
Mod4-Control-k	bspc presel up
Mod4-Control-j	bspc presel down
Mod4-BackSpace	bspc cancel
Mod4-Alt-h	bspc push left
Mod4-Alt-l	bspc push right
Mod4-Alt-k	bspc push up
Mod4-Alt-j	bspc push down
Mod4-Alt-Shift-l	bspc pull left
Mod4-Alt-Shift-h	bspc pull right
Mod4-Alt-Shift-j	bspc pull up
Mod4-Alt-Shift-k	bspc pull down
Mod4-Alt-Control-1	bspc set window_gap 0
Mod4-Alt-Control-2	bspc set window_gap 3
Mod4-Alt-Control-4	bspc set window_gap 9
Mod4-Alt-Control-5	bspc set window_gap 15
Mod4-Alt-Control-6	bspc set window_gap 24
Mod4-Alt-Control-7	bspc set window_gap 39
Mod4-Alt-Control-9	bspc set window_gap 102
Mod4-Alt-Control-0	bspc set window_gap 165
Mod4-Control-1	bspc ratio 0.1
Mod4-Control-2	bspc ratio 0.2
Mod4-Control-3	bspc ratio 0.3
Mod4-Control-4	bspc ratio 0.4
Mod4-Control-5	bspc ratio 0.5
Mod4-Control-6	bspc ratio 0.6
Mod4-Control-7	bspc ratio 0.7
Mod4-Control-8	bspc ratio 0.8
Mod4-Control-9	bspc ratio 0.9
Mod4-1	bspc use One
Mod4-2	bspc use Two
Mod4-3	bspc use Three
Mod4-4	bspc use Four
Mod4-5	bspc use Five
Mod4-6	bspc use Six
Mod4-7	bspc use Seven
Mod4-8	bspc use Eight
Mod4-9	bspc use Nine
Mod4-0	bspc use Ten
Mod4-Shift-1	bspc send_to One
Mod4-Shift-2	bspc send_to Two
Mod4-Shift-3	bspc send_to Three
Mod4-Shift-4	bspc send_to Four
Mod4-Shift-5	bspc send_to Five
Mod4-Shift-6	bspc send_to Six
Mod4-Shift-7	bspc send_to Seven
Mod4-Shift-8	bspc send_to Eight
Mod4-Shift-9	bspc send_to Nine
Mod4-Shift-0	bspc send_to Ten
Mod4-q	bspc alternate_monitor 
Mod4-w	bspc cycle_monitor next
Mod4-e	bspc toggle_visibility
Mod4-Shift-a	bspc close
#
# wm independent hotkeys
#
Mod4-Return	xterm
Mod4-Control-x	dmenu_run

